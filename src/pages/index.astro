---
import Layout from "../layouts/Layout.astro";
import example1 from "@/assets/site-example-1.png";
import example2 from "@/assets/site-example-2.png";
import example3 from "@/assets/site-example-3.png";

import logo1 from "@/assets/company-logo-1.jpg";
import logo2 from "@/assets/company-logo-2.jpg";
import logo3 from "@/assets/company-logo-3.jpg";
import logo4 from "@/assets/company-logo-4.jpg";
import logo5 from "@/assets/company-logo-5.jpg";
import logo6 from "@/assets/company-logo-6.jpg";

import Calendar from "../components/Calendar.astro";
import Testimonials from "../components/Testimonials.astro";
import Portfolio from "../components/Portfolio.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import Logo from "@/assets/logo.svg";
---

<Layout>
    <div class="flex flex-col min-h-screen">
        {/* Header/Navigation */}
        <header class="sticky top-0 z-50 w-full bg-background border-b border-muted-foreground">
            <div class="container mx-auto px-4 md:px-6 flex min-h-16 items-center justify-between">
                <div class="flex items-center gap-2">
                    <Logo width={100} height={100} />
                </div>

                <div class="flex items-center gap-4">
                    <a
                        href="/booking"
                        class="inline-flex text-white font-bold h-9 items-center justify-center rounded-md bg-primary px-4 text-md shadow transition-colors hover:bg-accent focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-accent"
                    >
                        Get a Free Website Design
                    </a>
                </div>
            </div>
        </header>

        <main class="flex-1">
            {/* Hero Section */}
            <section class="w-full py-12 md:py-24 lg:py-32 xl:py-48 bg-gradient-to-b from-background to-primary/10">
                <div class="container mx-auto px-4 md:px-6">
                    <div class="grid gap-6 lg:grid-cols-2 lg:gap-12 xl:grid-cols-2">
                        <div class="flex flex-col justify-center space-y-4">
                            <div class="space-y-2">
                                <h1 class="text-3xl font-bold tracking-tighter sm:text-5xl xl:text-6xl/none">
                                    Generate Organic Leads For Your Roofing Business
                                </h1>
                                <p class="max-w-[600px] text-muted-foreground md:text-xl">
                                    We specialise in designing and building high-converting websites specifically for
                                    Roofers to help attract more clients and grow your revenue through organic traffic.
                                </p>
                            </div>
                            <div class="flex flex-col gap-2 min-[400px]:flex-row">
                                <a
                                    href="/booking"
                                    class="inline-flex h-10 items-center justify-center rounded-md bg-primary px-8 text-sm font-medium text-white shadow transition-colors hover:bg-accent focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-accent"
                                >
                                    Get a Free Design
                                </a>
                            </div>
                            <div class="flex items-center gap-4 pt-4">
                                <div class="flex -space-x-2">
                                    {
                                        [logo1, logo2, logo3, logo5, logo4, logo6].map((i) => (
                                            <div class="inline-block h-8 w-8 rounded-full bg-background relative ring-2 ring-white overflow-hidden">
                                                <Image src={i} alt="logo" class="object-cover w-full h-full" />
                                            </div>
                                        ))
                                    }
                                </div>
                                <div class="flex items-center gap-1">
                                    {
                                        [1, 2, 3, 4, 5].map((i) => (
                                            <Icon name="mdi:star" class="h-5 w-5 text-yellow-400" />
                                        ))
                                    }
                                </div>
                                <div class="text-sm text-muted-foreground">Trusted by 100+ businesses</div>
                            </div>
                        </div>
                        <div class="flex items-center justify-center">
                            <div class="relative w-full max-w-[600px] h-[400px]">
                                {/* Background blur effects */}
                                <div class="absolute -top-6 -left-6 h-24 w-24 rounded-full bg-purple-500 blur-xl"></div>
                                <div class="absolute -bottom-6 -right-6 h-24 w-24 rounded-full bg-primary blur-xl">
                                </div>

                                {/* Layered images */}
                                <div class="absolute top-0 left-0 w-[80%] h-[80%] transform rotate-[-4deg] z-10">
                                    <div
                                        class="w-full h-full overflow-hidden rounded-xl border-4 border-white bg-background shadow-lg"
                                    >
                                        <Image
                                            src={example1}
                                            width={600}
                                            height={500}
                                            alt="Roofing Project Example"
                                            class="w-full h-full object-cover"
                                        />
                                    </div>
                                </div>

                                <div class="absolute top-[15%] right-0 w-[70%] h-[70%] transform rotate-[2deg] z-20">
                                    <div
                                        class="w-full h-full overflow-hidden rounded-xl border-4 border-white bg-background shadow-lg"
                                    >
                                        <Image
                                            src={example3}
                                            width={500}
                                            height={400}
                                            alt="Home Exterior Design"
                                            class="w-full h-full object-cover"
                                        />
                                    </div>
                                </div>

                                <div class="absolute bottom-0 left-[20%] w-[60%] h-[60%] transform rotate-[6deg] z-30">
                                    <div
                                        class="w-full h-full overflow-hidden rounded-xl border-4 border-white bg-background shadow-lg"
                                    >
                                        <Image
                                            src={example2}
                                            width={450}
                                            height={350}
                                            alt="Website Design Preview"
                                            class="w-full h-full object-cover"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="w-full py-12 md:py-24 lg:py-32 bg-background">
                <div class="container mx-auto px-4 md:px-6">
                    <div class="text-center mb-12">
                        <div
                            class="inline-flex items-center justify-center rounded-full bg-muted px-3 py-1 text-sm text-primary"
                        >
                            Why Choose Us
                        </div>
                        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mt-2">
                            Websites That Drive Real Results
                        </h2>
                        <p class="max-w-[800px] mx-auto mt-4 text-muted-foreground md:text-xl/relaxed">
                            We don't just build beautiful websites. We build organic lead machines for roofing
                        </p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16 max-w-6xl mx-auto">
                        {
                            [
                                {
                                    title: "Results-Driven Approach",
                                    description:
                                        "We don’t just build websites—we build conversion engines. With years of specialized experience in roofing websites, we understand what works and what doesn’t. Our focus is on creating high-performance websites that not only look stunning but also convert visitors into leads and drive business growth. Every design decision is made with your ROI in mind, ensuring your website works as hard as you do to grow your business.",
                                    icon: <Icon name="lucide:check-circle" class="h-12 w-12 text-primary" />,
                                },
                                {
                                    title: "Industry Expertise",
                                    description:
                                        "We're not just another web design agency; we are experts in roofing. With a deep understanding of the unique needs and challenges in the roofing and construction industries, we design websites that maximize leads and help your business rise above the competition. We know what works to convert visitors into qualified leads in your specific market.",
                                    icon: <Icon name="lucide:users" class="h-12 w-12 text-primary" />,
                                },
                                {
                                    title: "Custom Designs",
                                    description:
                                        "Your roofing business is unique, and your website should be too. We create custom designs tailored to your brand, your values, and your business goals. No templates or cookie-cutter solutions here. Our websites don’t just reflect your company—they amplify it, creating a powerful online presence that resonates with your target audience and sets you apart from competitors.",
                                    icon: <Icon name="lucide:layout" class="h-12 w-12 text-primary" />,
                                },
                                {
                                    title: "Ongoing Support",
                                    description:
                                        "We don’t just launch your website and walk away. If you'll have us, we’re committed to your success long after launch. From ongoing maintenance to strategy adjustments and support, we’re always by your side, ensuring your website remains secure, up-to-date, and continuously optimized to bring in consistent traffic and work hard for you.",
                                    icon: <Icon name="lucide:message-square" class="h-12 w-12 text-primary" />,
                                },
                            ].map((item, i) => (
                                <div class="relative">
                                    <div class="bg-background rounded-lg p-8 h-full shadow-sm border border-muted-foreground hover:shadow-md transition-shadow">
                                        <div class="absolute top-0 left-0 transform -translate-x-1/4 -translate-y-1/4 bg-muted p-4 rounded-full">
                                            {item.icon}
                                        </div>
                                        <div class="pt-6">
                                            <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
                                            <p class="text-muted-foreground text-lg">{item.description}</p>
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>

                    <div class="mt-16 text-center">
                        <a
                            href="/booking"
                            class="inline-flex h-12 items-center justify-center rounded-md bg-primary px-8 text-lg font-medium text-white shadow transition-colors hover:bg-primary focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-primary"
                        >
                            Schedule a Consultation
                        </a>
                    </div>
                </div>
            </section>

            <Portfolio />

            {/* Process Section */}
            <section id="process" class="w-full py-12 md:py-24 lg:py-32 bg-background">
                <div class="container mx-auto px-4 md:px-6">
                    <div class="flex flex-col items-center justify-center space-y-4 text-center">
                        <div class="space-y-2">
                            <div
                                class="inline-flex items-center justify-center rounded-full bg-muted px-3 py-1 text-sm text-primary"
                            >
                                Our Process
                            </div>
                            <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">
                                Built for Roofers. Designed to Perform.
                            </h2>
                            <p
                                class="max-w-[900px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
                            >
                                We keep things simple and effective — just like a solid roof. Here’s how we bring your
                                website to life:
                            </p>
                        </div>
                    </div>
                    <div class="mx-auto grid max-w-5xl grid-cols-1 gap-8 py-12 md:grid-cols-2 lg:grid-cols-4">
                        {
                            [
                                {
                                    step: 1,
                                    title: "Discovery",
                                    description:
                                        "We get to know your roofing business — what makes you stand out, who your ideal customers are, and what your goals look like.",
                                    icon: <Icon name="lucide:users" class="h-10 w-10 text-primary" />,
                                },
                                {
                                    step: 2,
                                    title: "Design",
                                    description:
                                        "We craft a custom design that reflects your brand, builds trust with homeowners, and drives inquiries — no cookie-cutter templates here.",
                                    icon: <Icon name="lucide:layout" class="h-10 w-10 text-primary" />,
                                },
                                {
                                    step: 3,
                                    title: "Development",
                                    description:
                                        "We turn the design into a high-performance website: fast, mobile-friendly, SEO-ready, and built to generate leads from day one.",
                                    icon: <Icon name="lucide:code" class="h-10 w-10 text-primary" />,
                                },
                                {
                                    step: 4,
                                    title: "Launch",
                                    description:
                                        "Once everything’s tested and ready, we launch your site — and walk you through how to manage it, so you’re in full control.",
                                    icon: <Icon name="lucide:globe" class="h-10 w-10 text-primary" />,
                                },
                            ].map((step) => (
                                <div class="relative flex flex-col items-center text-center">
                                    <div class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-muted">
                                        {step.icon}
                                    </div>
                                    <div class="absolute -top-2 -right-2 flex h-8 w-8 items-center justify-center  rounded-full bg-primary text-background">
                                        {step.step}
                                    </div>
                                    <h3 class="mb-2 text-xl font-bold">{step.title}</h3>
                                    <p class="text-sm text-muted-foreground">{step.description}</p>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </section>

            <div class="md:py-24 lg:py-32">
                <Testimonials />
            </div>

            {/* CTA Section */}
            <section class="w-full py-12 md:py-24 lg:py-32 bg-primary text-foreground">
                <div class="mx-auto px-4 md:px-6">
                    <div class="grid gap-6 lg:grid-cols-2 lg:gap-12">
                        <div class="flex flex-col justify-center space-y-4 text-white">
                            <div class="space-y-2">
                                <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">
                                    Ready to Transform Your Online Presence?
                                </h2>
                                <p
                                    class="max-w-[600px] text-white/90 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
                                >
                                    Book a free consultation today and receive a custom design mockup — totally free. If
                                    you like it, it's yours. And if you really like it, we’ll build it for you.
                                </p>
                            </div>
                            <div class="flex flex-col gap-2 min-[400px]:flex-row">
                                <div
                                    class="inline-flex h-10 items-center justify-center rounded-md px-8 text-md font-bold shadow transition-colors bg-white text-primary hover:bg-background focus-visible:outline-none"
                                >
                                    Book Now & Claim Your Free Design Mockup
                                </div>
                            </div>
                        </div>

                        <Calendar />
                    </div>
                </div>
            </section>
        </main>

        {/* Footer */}
        <footer class="w-full border-t border-muted-foreground bg-background py-12">
            <div class="container mx-auto px-4 md:px-6">
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
                    <div class="flex items-center gap-8">
                        <div class="flex items-center gap-2">
                            <Logo width={80} height={80} />
                        </div>
                        <p class="mt-2 text-sm text-muted-foreground">
                            We don’t just build websites — we build organic lead machines for roofing companies.
                        </p>
                    </div>

                    <div></div>
                </div>
                <div
                    class="mt-8 border-t border-muted-foreground pt-8 flex flex-col md:flex-row justify-between items-center"
                >
                    <p class="text-xs text-muted-foreground">
                        © {new Date().getFullYear()} LAP Media. All rights reserved.
                    </p>
                    <ul class="space-y-2 text-sm text-muted-foreground flex gap-4">
                        <li>
                            <a href="#" class="hover:text-primary"> Privacy Policy </a>
                        </li>
                        <li>
                            <a href="#" class="hover:text-primary"> Terms of Service </a>
                        </li>
                    </ul>
                    <div class="flex gap-4 mt-4 md:mt-0">
                        <a
                            href={`https://facebook.com/lapmedia.agency`}
                            class="flex h-8 w-8 items-center justify-center rounded-full bg-muted hover:bg-muted-foreground"
                        >
                            <Icon name="lucide:facebook" />
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</Layout>
