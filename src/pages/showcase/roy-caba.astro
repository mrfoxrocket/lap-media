    info,
    header,
    hero,
    reviews,
    whyUs,
    services,
    process,
    pastWork,
    faqs,
    areas,
} from "@/showcases/roy-caba/data";
import {
    Facebook,
    Instagram,
    CheckCircle,
    Phone,
    Mail,
    MapPin,
    ArrowRight,
    ArrowLeft,
    Clock,
    Star,
    Quote,
} from "lucide-react";
import Button from "@/components/starwind/button";
import Logo from "@/showcases/roy-caba/Logo.astro";
import Team from "@/showcases/roy-caba/Team.tsx";
import { cn } from "@/lib/utils";
