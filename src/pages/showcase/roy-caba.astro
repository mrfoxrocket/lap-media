            </div>

            <div class="space-y-12">
                {
                    process.steps.map((step, index) => (
                        <div class="relative">
                            {index < process.steps.length - 1 && (
                                <div class="absolute left-8 top-16 bottom-0 w-1 bg-white/20 hidden md:block" />
